  "compilerOptions": {
    "target": "ES6",
    "module": "ES6", // "CommonJS",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
